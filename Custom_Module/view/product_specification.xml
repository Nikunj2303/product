<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_product_specification_form" model="ir.ui.view">
        <field name="name">product.specification.form</field>
        <field name="model">product.specification</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <field name="part_selection"/>
                    <field name="starting_caliber_char" attrs="{'invisible': [('part_selection', '!=', 'is_caliber')]}"/>
                    <field name="part_code_ids"/>
                    <field name="search_terms_ids"/>
                </group>
            </form>
        </field>
    </record>
</odoo>
