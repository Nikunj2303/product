<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Product Import History Model -->
        <record id="model_products_import_history" model="ir.model">
            <field name="name">products.import.history</field>
            <field name="model">products.import.history</field>
            <field name="description">Product Import History</field>
            <field name="state">manual</field>
        </record>

        <!-- Product Import History Fields -->
        <record id="field_product_template_id" model="ir.model.fields">
            <field name="model_id" ref="model_products_import_history"/>
            <field name="name">product_template_id</field>
            <field name="field_description">Product</field>
            <field name="ttype">many2one</field>
            <field name="relation">product.template</field>
        </record>
        <record id="field_partner_id" model="ir.model.fields">
            <field name="model_id" ref="model_products_import_history"/>
            <field name="name">partner_id</field>
            <field name="field_description">Vendor</field>
            <field name="ttype">many2one</field>
            <field name="relation">res.partner</field>
        </record>
        <record id="field_old_price" model="ir.model.fields">
            <field name="model_id" ref="model_products_import_history"/>
            <field name="name">old_price</field>
            <field name="field_description">Old Price</field>
            <field name="ttype">float</field>
        </record>
        <record id="field_new_price" model="ir.model.fields">
            <field name="model_id" ref="model_products_import_history"/>
            <field name="name">new_price</field>
            <field name="field_description">New Price</field>
            <field name="ttype">float</field>
        </record>

        <!-- Product Import History View -->
        <record id="view_products_import_history_form" model="ir.ui.view">
            <field name="name">products.import.history.form</field>
            <field name="model">products.import.history</field>
            <field name="arch" type="xml">
                <form>
                    <group>
                        <field name="product_template_id"/>
                        <field name="partner_id"/>
                        <field name="old_price"/>
                        <field name="new_price"/>
                    </group>
                </form>
            </field>
        </record>
    </data>
</odoo>

