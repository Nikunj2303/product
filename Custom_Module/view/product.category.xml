<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="view_product_category_tree" model="ir.ui.view">
            <field name="name">product.category.tree</field>
            <field name="model">product.category</field>
            <field name="inherit_id" ref="product.product_category_tree_view"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='child_id']" position="after">
                    <field name="part_code_ids" widget="many2many_tags" options="{'no_create': True}"/>
                </xpath>
            </field>
        </record>

        <record id="view_product_category_form" model="ir.ui.view">
            <field name="name">product.category.form</field>
            <field name="model">product.category</field>
            <field name="inherit_id" ref="product.product_category_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="//group" position="inside">
                    <field name="part_code_ids" widget="many2many_tags" options="{'no_create': True}"/>
                </xpath>
            </field>
        </record>

        <record id="action_product_category" model="ir.actions.act_window">
            <field name="name">product category</field>
            <field name="res_model">product.category</field>
            <field name="view_mode">form,tree</field>
            <field name="view_id" ref="Custom_Module.view_product_category_form"/>
        </record>

        <menuitem id="menu_Configuration"
                  name="Configuration"
                  parent="menu_import_products"
                  sequence="20"/>
        <menuitem id="menu_category"
                  name="products category"
                  parent="menu_Configuration"
                  action="action_product_category"
                  sequence="20"/>
    </data>
</odoo>
