<odoo>
    <data>
        <record id="view_import_products_form" model="ir.ui.view">
            <field name="name">import.products.form</field>
            <field name="model">import.products</field>
            <field name="arch" type="xml">
                <form>
                    <group>
                        <field name="upload_file"/>
                        <field name="filename"/>
                        <field name="process"/>
                    </group>
                    <footer>
                        <button string="Process" class="oe_highlight" type="object" name="process_button"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="view_import_products_tree" model="ir.ui.view">
            <field name="name">import.products.tree</field>
            <field name="model">import.products</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="upload_file"/>
                    <field name="filename"/>
                    <field name="process"/>
                </tree>
            </field>
        </record>

        <record id="action_import_products" model="ir.actions.act_window">
            <field name="name">Import Products</field>
            <field name="res_model">import.products</field>
            <field name="view_mode">form,tree</field>
            <field name="view_id" ref="Custom_Module.view_import_products_form"/>
        </record>

        <menuitem id="menu_import_products"
                  name="Custom Module"
                  sequence="20"/>
        <menuitem id="menu_process_product"
                  name="process"
                  parent="menu_import_products"
                  sequence="20"/>
        <menuitem id="menu_import_process"
                  name="Import products"
                  parent="menu_process_product"
                  action="action_import_products"
                  sequence="20"/>
    </data>
</odoo>
