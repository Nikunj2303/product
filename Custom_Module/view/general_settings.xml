<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="general_settings_inherit_view" model="ir.ui.view">
        <field name="name">res.config.settings.inherit.product</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="base.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <data>
                <xpath expr="//group[@name='base.group_advanced_configuration']" position="after">
                    <group id="Service_div_id" string="Service">
                        <group>
                            <field name="vendor_id" options="{'no_create_edit': True}" />
                            <field name="currency_id" options="{'no_create_edit': True}" />
                            <field name="product_category_id" options="{'no_create_edit': True}" />
                        </group>
                    </group>
                </xpath>
            </data>
        </field>
    </record>
</odoo>
