<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="res_config_settings_view_form" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.base.setup</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="base.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <data>
                <div id="languages" position="after">
                    <div class="Service">
                        <div id="Service">
                            <h2>Service</h2>
                            <div class='row mt16 o_settings_container' name="languages_setting_container">
                                <div class='col-xs-12 col-md-6 o_setting_box' id="languages_setting">
                                    <div class='o_setting_right_pane'>
                                        <div class="mt16">
                                            <label for="vendor_id" class="pl-1 font-weight-bold">Vendor:</label>
                                            <field name="vendor_id" class="w-auto pl-1 font-weight-bold"/>
                                        </div>
                                        <div class="mt16">
                                            <label for="currency_id" class="pl-2 font-weight-bold">Currency:</label>
                                            <field name="currency_id" class="w-auto pl-2 font-weight-bold"/>
                                        </div>
                                        <div class="mt16">
                                            <label for="product_category_id" class="pl-3 font-weight-bold">Product
                                                Category:
                                            </label>
                                            <field name="product_category_id" class="w-auto pl-3 font-weight-bold"/>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </data>
        </field>
    </record>
</odoo>
