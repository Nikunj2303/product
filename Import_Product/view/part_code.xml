<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="view_part_code_tree" model="ir.ui.view">
            <field name="name">part.code.tree</field>
            <field name="model">part.code</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="part_no"/>
                    <field name="description"/>
                </tree>
            </field>
        </record>

        <record id="view_part_code_form" model="ir.ui.view">
            <field name="name">part.code.form</field>
            <field name="model">part.code</field>
            <field name="arch" type="xml">
                <form>
                    <group>
                        <field name="part_no"/>
                        <field name="description"/>
                    </group>
                </form>
            </field>
        </record>

        <record id="action_part_code" model="ir.actions.act_window">
            <field name="name">part code</field>
            <field name="res_model">part.code</field>
            <field name="view_mode">form,tree</field>
            <field name="view_id" ref="Import_Product.view_part_code_tree"/>
        </record>


        <menuitem id="menu_Configuration"
                  name="Configuration"
                  parent="menu_import_products"
                  sequence="20"/>
        <menuitem id="menu_part"
                  name="Part code"
                  parent="menu_Configuration"
                  action="action_part_code"
                  sequence="20"/>
    </data>
</odoo>
