<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_product_specifications_form" model="ir.ui.view">
        <field name="name">product_specification</field>
        <field name="model">product.specification</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <group>
                        <field name="part_selection"/>
                        <field name="starting_caliber_char"/>
                    </group>
                    <group>
                        <field name="part_code_ids" widget="many2many_tags"/>
                        <field name="search_terms_ids" widget="many2many_tags"/>
                    </group>
                </group>
            </form>
        </field>
    </record>

    <record id="view_product_specifications_tree" model="ir.ui.view">
        <field name="name">product_specification</field>
        <field name="model">product.specification</field>
        <field name="arch" type="xml">
            <tree>
                <field name="part_selection"/>
                <field name="starting_caliber_char"/>
                <field name="part_code_ids"/>
                <field name="search_terms_ids"/>
            </tree>
        </field>
    </record>

    <record id="action_product_specification" model="ir.actions.act_window">
        <field name="name">product specification</field>
        <field name="res_model">product.specification</field>
        <field name="view_mode">form,tree</field>
        <field name="view_id" ref="Import_Product.view_product_specifications_form"/>
    </record>

    <menuitem id="menu_Configuration"
              name="Configuration"
              parent="menu_import_products"
              sequence="20"/>
    <menuitem id="menu_specification"
              name="Product specification"
              parent="menu_Configuration"
              action="action_product_specification"
              sequence="20"/>
</odoo>
